<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_layout="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:elevation="4dp"
card_layout:cardCornerRadius="8dp"
card_layout:cardUseCompatPadding="true">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        card_layout:layout_constraintStart_toStartOf="@+id/view4"
        card_layout:layout_constraintTop_toTopOf="parent"
        card_layout:srcCompat="@drawable/project_management" />

    <TextView
        android:id="@+id/txtv_fac_new_prop_title"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="No Title"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        card_layout:layout_constraintBottom_toBottomOf="@+id/imageView7"
        card_layout:layout_constraintStart_toEndOf="@+id/imageView7"
        card_layout:layout_constraintTop_toTopOf="@+id/imageView7" />

    <TextView
        android:id="@+id/txtv_fac_new_prop_desc"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="start"
        android:lines="3"
        android:text="No Description"
        android:textAlignment="viewStart"
        card_layout:layout_constraintBottom_toBottomOf="parent"
        card_layout:layout_constraintEnd_toEndOf="parent"
        card_layout:layout_constraintStart_toStartOf="@+id/view4"
        card_layout:layout_constraintTop_toBottomOf="@+id/view4" />

    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/darker_gray"
        card_layout:layout_constraintEnd_toEndOf="parent"
        card_layout:layout_constraintStart_toEndOf="@+id/view2"
        card_layout:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <View
        android:id="@+id/view2"
        android:layout_width="8dp"
        android:layout_height="0dp"
        android:background="@color/colorAccent"
        card_layout:layout_constraintBottom_toBottomOf="parent"
        card_layout:layout_constraintStart_toStartOf="parent"
        card_layout:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>