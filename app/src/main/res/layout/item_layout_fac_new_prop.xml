<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_layout="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    card_layout:cardCornerRadius="8dp"
    card_layout:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtv_fac_new_prop_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            card_layout:layout_constraintEnd_toEndOf="parent"
            card_layout:layout_constraintStart_toStartOf="parent"
            card_layout:layout_constraintTop_toBottomOf="@+id/view2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Tap to view details"
            android:textAlignment="center"
            card_layout:layout_constraintBottom_toBottomOf="parent"
            card_layout:layout_constraintEnd_toEndOf="@+id/txtv_fac_new_prop_title"
            card_layout:layout_constraintStart_toStartOf="@+id/txtv_fac_new_prop_title"
            card_layout:layout_constraintTop_toBottomOf="@+id/txtv_fac_new_prop_title" />

        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:background="@color/colorAccent"
            card_layout:layout_constraintEnd_toEndOf="parent"
            card_layout:layout_constraintStart_toStartOf="parent"
            card_layout:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>