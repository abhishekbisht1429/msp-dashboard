<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_layout="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:orientation="vertical"
    card_layout:cardCornerRadius="8dp"
    card_layout:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgv_layout_fac_list_profile_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            card_layout:layout_constraintBottom_toBottomOf="parent"
            card_layout:layout_constraintStart_toEndOf="@+id/view"
            card_layout:layout_constraintTop_toTopOf="parent"
            card_layout:srcCompat="@drawable/teacher_placeholder" />

        <TextView
            android:id="@+id/txtv_fac_list_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#0C0C0C"
            android:textSize="18sp"
            android:textStyle="bold"
            card_layout:layout_constraintEnd_toEndOf="parent"
            card_layout:layout_constraintStart_toEndOf="@+id/imgv_layout_fac_list_profile_pic"
            card_layout:layout_constraintTop_toTopOf="@+id/imgv_layout_fac_list_profile_pic" />

        <TextView
            android:id="@+id/txtv_layout_fac_list_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="TextView"
            android:textAlignment="center"
            card_layout:layout_constraintBottom_toBottomOf="@+id/imgv_layout_fac_list_profile_pic"
            card_layout:layout_constraintEnd_toEndOf="@+id/txtv_fac_list_name"
            card_layout:layout_constraintStart_toStartOf="@+id/txtv_fac_list_name"
            card_layout:layout_constraintTop_toBottomOf="@+id/txtv_fac_list_name" />

        <View
            android:id="@+id/view"
            android:layout_width="8dp"
            android:layout_height="0dp"
            android:background="@color/colorAccent"
            card_layout:layout_constraintBottom_toBottomOf="parent"
            card_layout:layout_constraintStart_toStartOf="parent"
            card_layout:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>